<div class="container">
    <div class="row">
      <div class="col-12">
        <br><button type="submit" class="btn btn-success"><a class=" text-light text-decoration-none" href="/admin/new-user">addnew user</a></button><br><br>
        <% 
if(typeof mssg !=='undefined'){
    %>
    <p style="color: green;"> <%= mssg  %> </p>
