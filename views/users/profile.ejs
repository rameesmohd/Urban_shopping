    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="h-25 w-25 rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>

                <!-- Change password -->
              <div class="card mt-3 mb-4 mb-xl-0">
                <div class=" card-header ">Change Password</div>
                <div class="card-body">

                    <form method="post">
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Enter your current password</label>
                            <input class="form-control" name="currentPass" id="currentPass" type="password" placeholder="Current password">
                        </div>
                        <p class="text-danger" id="currentPassMsg"></p>
                         <div class="mb-3">
                            <label class="small mb-1" for="">Enter new password</label>
                            <input class="form-control" id="newPassword" type="password" placeholder="New password">
                        </div>
                   
                        <div class="mb-3">
                            <label class="small mb-1" for="">Confirm new password</label>
                            <input class="form-control" id="confrimPassword" type="password" placeholder="Confirm new password" >
                        </div>
                        <p id="msg" class="text-danger"></p>
                        <div class="dis-flex justify-content-center">
                            <button type="button" onclick="validatePass()"  class="btn btn-sm btn-secondary ">Submit</button>
                        </div>
                        
                    </form>

                </div>
             </div>

        </div>
   

        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <form>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Username (how your name will appear to other users on the site)</label>
                            <input class="form-control" id="inputUsername" type="text"  value="<%= user.name %>" readonly>
                        </div>

                         <!-- Form Group (email address)-->
                         <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Email address</label>
                            <input class="form-control" id="inputEmailAddress" type="email"  value="<%= user.email %>"readonly>
                        </div>
                   
                       
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputPhone">Phone number</label>
                                <input class="form-control" id="inputPhone" type="tel"  value="<%=user.mobile%>" readonly>
                            </div>
                            
                        </div>

                        <!-- Save changes button-->
                        <h6 class=" ul" type="button">Saved Address:</h6>
                      
                        <% for(let i = 0 ; i < user.address.length ; i ++){ %>
                        <form id="<%= user.address[i]._id %>" class="needs-validation " method="post" action="/payment" novalidate>
                            <hr class="mb-4">
                            <label  for="option1"><%= user.address[i].firstName %><%= user.address[i].lastName %></label>
                            <label  for="option1"><%= user.address[i].house %><%= user.address[i].landMark %></label>
                            <label  for="option1"><%= user.address[i].city %>,<%= user.address[i].state %></label>
                            <label  for="option1"><%= user.address[i].pinCode %></label>
                            <label  for="option1"><%= user.address[i].phone %></label>
                            <button onclick="deleteAddress('<%= user.address[i]._id %>')" class="btn btn-sm btn-secondary" type="button">Delete</button>
                            <a class="btn btn-sm btn-secondary" href="/edit-address?id=<%= user.address[i]._id %>&index=<%= i %>">Edit</a>
                            <!-- <input  type="radio" value="" id="" option1" name="index"> -->
                          <br>  
                        </form>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

